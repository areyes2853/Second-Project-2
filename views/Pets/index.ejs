<!-- views/fruits/index.ejs -->
<%- include('../partials/header.ejs') %>
<body>
  <h1>All Pets</h1>
  <a href="/pets/new">Add New Pet</a>

  <% if (pets && pets.length > 0) { %>
    <ul>
      <% pets.forEach(pet => { %>
        <li>
          <a href="/pets/<%= pet._id %>">
            <strong><%= pet.name %></strong>
          </a>
          (<%= pet.type %>)

          <% if (pet.customer && pet.customer.name) { %>
             - Owned by: <%= pet.customer.name %>
          <% } else { %>
             - (No Owner Assigned)
          <% } %>

          <%# Add links to edit/delete later inside the li if desired %>
        </li>
      <% }) %>
    </ul>
  <% } else { %>
    <p>No pets found.</p>
  <% } %>

  <%- include('../partials/footer.ejs') %>
</body>
</html>